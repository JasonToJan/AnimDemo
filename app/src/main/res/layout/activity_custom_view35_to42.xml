<?xml version="1.0" encoding="utf-8"?>
<com.example.jasonjan.animdemo.widget.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".customview.CustomView35To42Activity">

    <LinearLayout
        android:id="@+id/custom35_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:orientation="vertical">

            <com.example.jasonjan.animdemo.customview.view.CustomView35
                android:id="@+id/custom35_cv"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:visibility="visible"
                android:scaleType="matrix"
                />

            <TextView
                android:id="@+id/custom35_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:text="双指缩放效果"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:gravity="center_horizontal"
            android:background="#ffffff"
            android:orientation="vertical">

            <com.example.jasonjan.animdemo.customview.view.CustomView36
                android:id="@+id/custom36_cv"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:scrollbars="none"
                />

            <TextView
                android:id="@+id/custom36_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:text="自定义ListView"
                />

        </LinearLayout>

    </LinearLayout>

</com.example.jasonjan.animdemo.widget.MyScrollView>