<?xml version="1.0" encoding="utf-8"?>
<com.example.jasonjan.animdemo.widget.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".customview.CustomView19To27Activity">

    <LinearLayout
        android:id="@+id/custom12_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <com.example.jasonjan.animdemo.customview.view.CustomView19
                android:id="@+id/custom19_cv"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:visibility="visible"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/custom19_tv"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="点击获取参数信息"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    />

                <Button
                    android:id="@+id/custom19_btn1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="文字居中"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <com.example.jasonjan.animdemo.customview.view.CustomView20
                android:id="@+id/custom20_cv"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:visibility="visible"
                />

            <Button
                android:id="@+id/custom20_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="StaticLayout实现换行"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <com.example.jasonjan.animdemo.customview.view.CustomView21
                android:id="@+id/custom21_cv"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:visibility="visible"
                />

            <Button
                android:id="@+id/custom21_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="改变字体"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <com.example.jasonjan.animdemo.customview.view.CustomView22
                android:id="@+id/custom22_cv"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/custom22_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="使用画笔的遮罩滤镜实现阴影效果"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:orientation="vertical">

            <com.example.jasonjan.animdemo.customview.view.CustomView23
                android:id="@+id/custom23_cv"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:visibility="visible"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/custom23_tv"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Paint#setMaskFilter实现图片阴影效果"
                    />

                <Button
                    android:id="@+id/custom23_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阴影效果"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:orientation="vertical">

            <com.example.jasonjan.animdemo.customview.view.CustomView24
                android:id="@+id/custom24_cv"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:visibility="visible"
                />

            <Button
                android:id="@+id/custom24_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="EmbossMaskFilter实现浮雕效果"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:orientation="vertical">

            <com.example.jasonjan.animdemo.customview.view.CustomView25
                android:id="@+id/custom25_cv"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/custom25_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Paint#setPathEffect实现路径效果"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:orientation="vertical">

            <com.example.jasonjan.animdemo.customview.view.CustomView26
                android:id="@+id/custom26_cv"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/custom26_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Path实现心电图"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:orientation="vertical">

            <com.example.jasonjan.animdemo.customview.view.CustomView27
                android:id="@+id/custom27_cv"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:visibility="visible"
                />

            <Button
                android:id="@+id/custom27_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Paint#setShadowLayer实现阴影"
                />

        </LinearLayout>


    </LinearLayout>

</com.example.jasonjan.animdemo.widget.MyScrollView>