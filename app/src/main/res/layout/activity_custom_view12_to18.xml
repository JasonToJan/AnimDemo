<?xml version="1.0" encoding="utf-8"?>
<com.example.jasonjan.animdemo.widget.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".customview.CustomView12To18Activity">

    <LinearLayout
        android:id="@+id/custom12_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".customview.CustomView12To18Activity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <com.example.jasonjan.animdemo.customview.view.CustomView12
                android:id="@+id/custom01_cv"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:visibility="visible"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击星星改变颜色#LightingColorFilter"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <com.example.jasonjan.animdemo.customview.view.CustomView13
                android:id="@+id/custom13_cv"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:visibility="visible"
                />

            <Button
                android:id="@+id/custom13_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图形混合之PorterDuffColorFilter的使用"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:orientation="vertical">

            <com.example.jasonjan.animdemo.customview.view.CustomView14
                android:id="@+id/custom14_cv"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:visibility="visible"
                    />

            <com.example.jasonjan.animdemo.customview.view.CustomView15
                android:id="@+id/custom15_cv"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:visibility="gone"
                />


            <com.example.jasonjan.animdemo.customview.view.CustomView16
                android:id="@+id/custom16_cv"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:visibility="gone"
                />

            <com.example.jasonjan.animdemo.customview.view.CustomView17
                android:id="@+id/custom17_cv"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:visibility="gone"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/custom14_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="切换素材"
                    android:layout_gravity="center_horizontal"
                    />

                <Button
                    android:id="@+id/custom15_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="去背景"
                    android:layout_gravity="center_horizontal"
                    />

                <Button
                    android:id="@+id/custom16_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="抠图"
                    android:layout_gravity="center_horizontal"
                    />

                <Button
                    android:id="@+id/custom17_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="滤色"
                    android:layout_gravity="center_horizontal"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:orientation="vertical">

            <com.example.jasonjan.animdemo.customview.view.CustomView18
                android:id="@+id/custom18_cv"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:visibility="visible"
                />

            <Button
                android:id="@+id/custom18_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PorterDuffXfermode的橡皮擦效果"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>

    </LinearLayout>


</com.example.jasonjan.animdemo.widget.MyScrollView>